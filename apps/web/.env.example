# Environment Variables for Web App

# App Configuration
NEXT_PUBLIC_APP_NAME="Toy Marketplace India"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:4000"

# API Keys
NEXT_PUBLIC_RAZORPAY_KEY_ID="your_razorpay_key_id"
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key"
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID="your_ga_measurement_id"
NEXT_PUBLIC_SENTRY_DSN="your_sentry_dsn"

# Feature Flags
NEXT_PUBLIC_ENABLE_CHAT="true"
NEXT_PUBLIC_ENABLE_NOTIFICATIONS="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"

# Database (for server-side)
DATABASE_URL="postgresql://user:password@localhost:5432/toy_marketplace"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your_jwt_secret_key_here"
JWT_EXPIRES_IN="7d"

# Third-party Services
RAZORPAY_KEY_SECRET="your_razorpay_key_secret"
CLOUDINARY_API_KEY="your_cloudinary_api_key"
CLOUDINARY_API_SECRET="your_cloudinary_api_secret"
MSG91_AUTH_KEY="your_msg91_auth_key"
RESEND_API_KEY="your_resend_api_key"
WHATSAPP_API_KEY="your_whatsapp_api_key"

# Shipping
SHIPROCKET_EMAIL="your_shiprocket_email"
SHIPROCKET_PASSWORD="your_shiprocket_password"
DELHIVERY_API_KEY="your_delhivery_api_key"

# Meilisearch
MEILISEARCH_HOST="http://localhost:7700"
MEILISEARCH_API_KEY="your_meilisearch_api_key"
